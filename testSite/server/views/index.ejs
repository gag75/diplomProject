<% layout('/layout/page') -%>

<% if (user) { %>
    <p class="lead"> <%= user.username %> </p>

        <% if(user.type==0){ %>
        <p class="lead">Обычный пользователь</p>
        <% } else { %>
            <p class="lead"> Администратор </p>
        <% } %>
        <div class="tabs-wrapper">
            <ul class="nav classic-tabs tabs-cyan" role="tablist">
                <li class="nav-item">
                    <a class="nav-link waves-light active" data-toggle="tab" href="#panel51" role="tab">Call Service</a>
                </li>
                <% if(user.type!=0){ %>
                <li class="nav-item">
                    <a class="nav-link waves-light listHistoryLink" data-toggle="tab" href="#panel52" role="tab">List History</a>
                </li>
                <% } %>
            </ul>
        </div>

