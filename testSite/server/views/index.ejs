          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="card-header info-color white-text">
                Add Summary
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                  <!--Naked Form-->
                    <div class="card-block">

                        <!--Header-->
                        <div class="text-center">
                            <h3><i class="fa fa-file-text-o"></i> Summary</h3>
                            <hr class="mt-2 mb-2">
                        </div>

                        <!--Body-->

                        <div class="md-form">
                            <i class="fa fa-tag prefix"></i>
                            <input type="text" id="form32" class="form-control addSummuryForm__titleInput validate">
                            <label for="form32" data-error="empty">Title</label>
                        </div>

                        <div class="md-form" style="margin: 40px 0;">
                            <i class="fa fa-pencil prefix"></i>
                            <textarea type="text" id="form8" class="md-textarea addSummuryForm__textInput validate"></textarea>
                            <label for="form8" data-error="empty" validate>Text Summary</label>
                        </div>
                    </div>
              </div>
              <div class="modal-footer">
                  <button class="btn btn-default info-color addSummuryForm__btnSave">Save</button>
                  <button type="button" class="btn red" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>
