        <!-- Tab panels -->
        <div class="tab-content">
            <!--Panel 1-->
            <div class="tab-pane fade container in show active callService" id="panel51" role="tabpanel">
                <div class="row">
                    <div class="col-9 card CallVideo">
                        <h3 class="card-header white white-text"><a class="btn btn-info btn-rounded CallVideo__btn_makeCall">Make Call</a></h3>
                        <div class="card-block CallVideo__container">
                            <div class="CallVideo__video-container">
                                <video class="info-color CallVideo__online" src="" autoplay="true"></video>
                                <video class="special-color CallVideo__local" src="" autoplay="true"></video>
                            </div>
                            <div class="CallVideo__nav">
                                <a class="btn-floating btn-small success-color CallVideo__btn_stopVideo"><i class="fa fa-video-camera"></i></a>
                                <a class="btn-floating btn-small success-color CallVideo__btn_muteVideo"><i class="fa fa-microphone"></i></a>
                                <a class="btn-floating btn-small red CallVideo__btn_resetCall"><i class="fa fa-phone"></i></a>
                            </div>
                        </div>
                    </div>
                        <div class="col CallMessages chatbox-holder">
                              <div class="chatbox">
                                <h3 class="card-header info-color white-text">Chat</h3>
                                <div class="chat-messages">
                                </div>
                                <div class="md-form chat-input-holder">
                                  <textarea type="text" id="form7" class="md-textarea chat-textArea" placeholder="Message"></textarea>
